#!/bin/bash

yc_instances_app=$(yc compute instance list | grep app | awk -F\| '{print $3 $6}')
yc_instances_db=$(yc compute instance list | grep db |  awk -F\| '{print $3 $6}')

if [[ "$1" == "--gen" ]]; then

cat<<EOF
{
    "_meta": {
        "hostvars": {
            "${yc_instances_app[0]}": {
                "ansible_host": "${yc_instances_app[1]}",
                "ansible_user": "ubuntu"
            },
            "${yc_instances_db[0]}": {
                "ansible_host": "${yc_instances_db[1]}",
                "ansible_user": "ubuntu"
            }
        }
    },
    "all": {
        "children": [
            "app",
            "db",
            "ungrouped"
        ]
    },
    "app": {
        "hosts": [
            "${yc_instances_app[0]}"
        ]
    },
    "db": {
        "hosts": [
            "${yc_instances_db[0]}"
        ]
    }
}
EOF

elif [[ "$1" == "--host" ]]; then
cat<<EOF
{
    "_meta": {
        "hostvars": {}
    }
}
EOF
else
  echo "no args"
fi
